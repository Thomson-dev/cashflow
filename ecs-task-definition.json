{
  "family": "cashflow-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/cashflow-task-role",
  "containerDefinitions": [
    {
      "name": "cashflow-api",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/cashflow-api:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "COGNITO_REGION",
          "value": "us-east-1"
        },
        {
          "name": "COGNITO_USER_POOL_ID",
          "value": "us-east-1_DZU1jp4rL"
        },
        {
          "name": "USERS_TABLE",
          "value": "cashflow-users"
        },
        {
          "name": "TRANSACTIONS_TABLE",
          "value": "cashflow-transactions"
        },
        {
          "name": "FILE_UPLOADS_TABLE",
          "value": "cashflow-file-uploads"
        },
        {
          "name": "S3_BUCKET_NAME",
          "value": "cashflow-ai-bucket"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cashflow-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
